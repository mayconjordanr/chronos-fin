# CHRONOS Fin - Configuração para chronos.ia.br
# Copiar para .env e configurar valores específicos

APP_NAME="CHRONOS Fin"
APP_ENV=production
APP_KEY=base64:SUA_CHAVE_AQUI_GERAR_COM_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://app.chronos.ia.br

# Domínio principal para multi-tenancy
CHRONOS_MAIN_DOMAIN=chronos.ia.br
CHRONOS_APP_DOMAIN=app.chronos.ia.br

# Database Principal
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=chronos_fin_main
DB_USERNAME=chronos_user
DB_PASSWORD=SUA_SENHA_MYSQL_AQUI

# Cache e Sessões
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue (para processamento em background)
QUEUE_CONNECTION=redis

# Mail (configurar com seu provedor)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_de_app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@chronos.ia.br
MAIL_FROM_NAME="${APP_NAME}"

# Configurações CHRONOS Fin específicas
CHRONOS_WHATSAPP_WEBHOOK_TOKEN=token_ultra_seguro_para_webhook_whatsapp
CHRONOS_DEFAULT_TIMEZONE=America/Sao_Paulo
CHRONOS_DEFAULT_CURRENCY=BRL
CHRONOS_TRIAL_DAYS=30

# SSL/TLS obrigatório em produção
APP_FORCE_HTTPS=true
SESSION_SECURE_COOKIE=true

# Logs
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Broadcasting (para notificações em tempo real)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Configurações de segurança
SESSION_LIFETIME=120
SANCTUM_STATEFUL_DOMAINS=chronos.ia.br,app.chronos.ia.br,*.chronos.ia.br

# Configurações adicionais para multi-tenancy
TENANT_DATABASE_PREFIX=chronos_
TENANT_CACHE_PREFIX=tenant_

# Limites por plano
BASIC_PLAN_MAX_USERS=1
BASIC_PLAN_MAX_TRANSACTIONS=100
PRO_PLAN_MAX_USERS=5
PRO_PLAN_MAX_TRANSACTIONS=1000
ENTERPRISE_PLAN_MAX_USERS=-1
ENTERPRISE_PLAN_MAX_TRANSACTIONS=-1

# Preços dos planos (em centavos para evitar problemas de float)
BASIC_PLAN_PRICE=0
PRO_PLAN_PRICE=2900
ENTERPRISE_PLAN_PRICE=9900

# Configurações de backup
BACKUP_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=chronos-fin-backups

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Configurações de CDN (opcional)
CDN_URL=https://cdn.chronos.ia.br
ASSET_URL="${CDN_URL}"

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_WEBHOOK=10

# Debug e Development (não usar em produção)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false